#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib/'))
require 'json'
require 'pry-byebug'
require 'runner'
require 'venues'

puts '--> start runner'
vacancies = Runner.new(
  btc: BTCScraper.new
).run

puts '--> write to runner-data.json'
data = {
  vacancies:,
  venues: VENUES.all,
  updated_at: Time.now.to_s
}
File.write('runner-data.json', JSON.dump(data))
puts '--> done'
